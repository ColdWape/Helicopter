@foreach (var item in ViewBag.Airs)
{
    if (item.Id == ViewBag.inputId)
    {
        <div class="showcase-grid">
            <div class="container">
                <div class="col-md-8 showcase">
                    <div class="flexslider">
                        <ul class="slides">
                            <li data-thumb="@item.FirstPhoto">
                                <div > <img src="@item.FirstPhoto" data-imagezoom="true" class="img-responsive"> </div>
                            </li>
                            <li data-thumb="@item.SecondPhoto">
                                <div > <img src="@item.SecondPhoto" data-imagezoom="true" class="img-responsive"> </div>
                            </li>
                            <li data-thumb="@item.ThirdPhoto">
                                <div> <img src="@item.ThirdPhoto" data-imagezoom="true" class="img-responsive"> </div>
                            </li>
                            <li data-thumb="@item.FourthPhoto">
                                <div > <img src="@item.FourthPhoto" data-imagezoom="true" class="img-responsive"> </div>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="col-md-4 showcase">
                    <div class="showcase-rt-top">
                        <div class="pull-left shoe-name">
                            <h3>@item.Name</h3>
                            <p>Квадрокоптер</p>
                            <h4>@item.Price &#8381;</h4>
                        </div>

                        <div class="clearfix"></div>
                    </div>
                    <hr class="featurette-divider">
                    <form asp-action="ShowOrder" asp-controller="Order" method="get">
                        <div class="shocase-rt-bot">
                            <div class="float-qty-chart">
                                <ul>
                                    <li class="qty">
                                        <h4>Количество</h4>
                                        <select name="quantity" class="form-control qnty-chrt">
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5</option>
                                            <option value="6">6</option>
                                            <option value="7">7</option>
                                        </select>
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <ul>
                                <li class="ad-2-crt simpleCart_shelfItem">
                                    <input style="display:none" name="inputId" value="@item.Id" />
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <input type="submit" value="Перейти к покупке" class="btn" />

                                    }
                                    else
                                    {
                                        <input type="button" onclick="noAuth()" value="Перейти к покупке" class="btn" />
                                    }
                                </li>
                            </ul>
                        </div>
                    </form>
                    @*<div class="showcase-last">
                        <h3>product details</h3>
                        <ul>
                            <li>Internal bootie wraps your foot for a sock-like fit</li>
                            <li>Unique eyestays work with the Flywire cables to create an even better glove-like fit</li>
                            <li>Waffle outsole for durability and multi-surface traction</li>
                            <li>Sculpted Cushlon midsole combines plush cushioning and springy resilience for impact protection</li>
                            <li>Midsole flex grooves for greater forefoot flexibility</li>
                        </ul>
                    </div>*@
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

        <div class="specifications">
            <div class="container">
                <h3>Подробнее</h3>
                <div class="detai-tabs">
                    <!-- Nav tabs -->
                    <ul class="nav nav-pills tab-nike" role="tablist">
                        <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Характеристики</a></li>
                        <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Описание</a></li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active" id="home">
                            <p>Количество моторов: @item.QuantityOfMotors</p>
                            <p>Количество пропеллеров: @item.QuantityOfPropellers</p>
                            <p>Максимальная горизонтальная скорость: @item.MaxHorizontalSpeed</p>
                            <p>Максимальная вертикальная скорость: @item.MaxVerticalSpeed</p>
                            @if (item.HasItCamera) { <p>Наличие камеры: есть </p>} else { <p>Наличие камеры: отсутствует </p> }
                            <p>Время работы без подзарядки: до @item.WorkingHours</p>
                        </div>
                        <div role="tabpanel" class="tab-pane" id="profile">
                            <p>@item.Description</p>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    }
}
<script>
    function noAuth() {
        alert('Чтобы купить товар необходимо войти')
    }
</script>

